<UserControl x:Class="Amigo.New_Scenario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Height="auto" Width="auto" Style="{DynamicResource ResourceKey=BorderStyle}">
            <StackPanel>
                <TextBlock Text="Please enter the scenario name" Margin="5" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                <Separator/>
                <TextBlock Name="message_box"  Margin="5" FontSize="14" HorizontalAlignment="Center" Background="LightBlue" Text="Suggested name format(Date-Project-scenario-***)" />
                <Separator/>
                <TextBox Width="350" HorizontalAlignment="Center" Name="scenario_name_text"/>
                <Separator/>
                <Button Name="scenario_save_button" Height="30" Width="50" Style="{DynamicResource BlueButton}" Click="scenario_save_button_Click">
                    <TextBlock FontSize="14" Foreground="White">Save</TextBlock>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
