<UserControl x:Class="Amigo.new_project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300" x:Name="new_project_window" Background="Transparent">
    <Grid>
        <Border Height="auto" Width="auto" Style="{DynamicResource ResourceKey=BorderStyle}">
            <StackPanel>
                <TextBlock Text="Please enter the project name" Margin="5" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                <Separator/>
                <TextBlock Text="" Name="message_box"  Margin="5" FontSize="14" HorizontalAlignment="Center" Background="LightBlue" />
                <Separator/>
                <TextBox Width="200" HorizontalAlignment="Center" Name="project_name_text"/>
                <Separator/>
                <Button Name="project_save_button" Height="30" Width="50" Style="{DynamicResource BlueButton}" Click="Project_save_Button_Click">
                    <TextBlock FontSize="14" Foreground="White">Save</TextBlock>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>